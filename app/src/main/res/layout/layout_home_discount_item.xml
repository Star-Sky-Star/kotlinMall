<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:orientation="vertical"
              android:paddingRight="@dimen/common_padding"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="71dp"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="71dp"
                   android:layout_height="71dp"
                   android:scaleType="fitXY"
                   android:id="@+id/mGoodIconIv"/>
        <jp.shts.android.library.TriangleLabelView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:backgroundColor="@color/common_red"
                app:primaryText="折扣"
                app:labelTopPadding="10dp"
                app:labelCenterPadding="0dp"
                app:labelBottomPadding="5dp"
                app:primaryTextSize="10sp"/>
    </RelativeLayout>

    <TextView android:id="@+id/mDiscountAfterTv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/text_small_size"
              android:textColor="@color/common_red"
              android:layout_marginTop="@dimen/common_margin_small"/>
    <TextView android:id="@+id/mDiscountBeforeTv"
              android:layout_height="wrap_content"
              android:layout_width="wrap_content"
              android:textSize="10sp"
              android:textColor="@color/common_disable"/>

</LinearLayout>